<!DOCTYPE html>
@{string version = "1.01";}
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap5/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/stylesheet.css?v=@version" rel="stylesheet">
    <link href="~/lib/fontawesome/css/all.min.css" rel="stylesheet">
    <link href="~/css/wheelcolorpicker.css?v=@version" rel="stylesheet" />
    <title>@ViewData["title"]</title>
    @await RenderSectionAsync("Styles", required: false)
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
</head>
<body style="height:100vh;  width: 100vw;position:relative;overflow:hidden;">
    <div class="d-flex flex-column" style="position:absolute; left:0; right:0;height: 100vh; width: 100vw">
        <div class="align-items-center d-flex justify-content-between" style="background-color: #6f6d70; height: 48px;">
            <div style="height:100%;width: 9rem; padding-left: 0.8rem; display: flex; align-items: center; justify-content: center;">
                <a href="/gallery/" class="logo-container" style="z-index: 102;">
                    <img class="mw-100" src="/imgs/logo_white.svg" style="width: 100%;">
                </a>
            </div>
            <div class="align-items-center d-flex justify-content-center w-100" style="position:fixed;top: 0;left: 0;color:#fff;z-index:101;">
                <div class="d-flex flex-column">
                    <div class="align-items-center d-flex justify-content-between" id="save_send" style="width:160px;cursor:pointer;">
                        <div>Save and send</div>
                        <div><i class="fa-solid fa-angle-down"></i></div>
                    </div>
                </div>
            </div>
            <div style="padding: 0 0.5rem;">
                <a href="/warp/createnew/" class="btn-head-action">Edit Info</a>
                <a href="/gallery/" class="btn-head-action">Gallery</a>
                <a class="btn-head-action">Sign in</a>
            </div>
        </div>
        <div id="main" class="d-flex w-100" style="height: calc(100vh - 48px);overflow:hidden;position:relative;">
            <div class="d-flex justify-content-center align-items-center w-100" style="position:absolute;top:auto;left:0;">
                <div id="send_actions" style="width: 160px;">
                    <div class="send-action">Apparel</div>
                    <div class="send-action">Creator</div>
                    <div class="send-action">Boxby</div>
                    <div class="send-action">TrueBrush</div>
                </div>
            </div>
            @RenderBody()
        </div>
    </div>
    <div id="svg_temp" style="position: fixed;left: -10000000px;top: -100000px;visibility:hidden;"></div>
    <svg id="svg_container" xmlns="http://www.w3.org/2000/svg" style="position: fixed;left: -10000000px;top: -100000px;visibility:hidden;">
        <defs>
            <linearGradient id="sampleGradient" gradientTransform="rotate(1)" x1="0%" y1="50%" x2="100%" y2="50%" gradientUnits="userSpaceOnUse">
                <stop offset="0%" id="first_color" stop-color="#6b6fff" />
                <stop offset="100%" id="second_color" stop-color="#bc91c1" />
            </linearGradient>
            <filter id="contrast0">
                <feComponentTransfer>
                    <feFuncR type="linear" slope="1" />
                    <feFuncG type="linear" slope="1" />
                    <feFuncB type="linear" slope="1" />
                </feComponentTransfer>
            </filter>
            <filter id="contrast1">
                <feComponentTransfer>
                    <feFuncR type="linear" slope="1" />
                    <feFuncG type="linear" slope="1" />
                    <feFuncB type="linear" slope="1" />
                </feComponentTransfer>
            </filter>
        </defs>
    </svg>
    <div class="align-items-center justify-content-center w-100 h-100" id="loader" style="background: transparent !important;opacity: 1;">
        <div>
            <img src="~/imgs//loading.svg" style="width:80px;height:80px;"/>
        </div>
    </div>
</body>
<script src="~/js/warp_asset/d3.v3.min.js"></script>
<script src="~/js/warp_asset/svg-path-properties.min.js"></script>
<script src="~/js/warp_asset/seperatePathGenerator.js?v=@version"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/fontawesome/js/all.min.js"></script>
<script src="~/lib/bootstrap5/js/bootstrap.min.js"></script>
<script src="~/js/jquery.wheelcolorpicker.js"></script>
<script src="~/js/common.js?v=@version"></script>
<script src="~/js/toolcool-range-slider.min.js"></script>
<script src="~/js/warp_asset/app.js?v=@version"></script>
<script src="~/js/ActionScript.js?v=@version"></script>
@await RenderSectionAsync("Scripts", required: false)
</html>
