
@{
    ViewData["title"] = "Create a new warped svg";
    Layout = "~/Views/Shared/_CreateNewLayout.cshtml";
}

<div id="wordInputView" class="sub-view align-items-center d-flex justify-content-around w-100 h-100">
    <div class="align-items-center d-flex flex-column col-sm-12 col-md-9 col-lg-8 col-xl-6">
        <div>
            <label id="messageWraper" style="font-size: 28px;color: #9a9a9a; visibility:hidden;">Enter up to 2 words here</label>
        </div>
        <div class="align-items-center d-flex flex-column w-100" style="padding: 85px 10px 50px 10px;">
            <input id="warp_words" name="tags" placeholder="Type a word and hit enter" value="" style="width:100%">
            <input name="inputedWords" type="hidden" value="" />
        </div>
        <div>
            <div id="wordsInput" class="btn-next">Next</div>
        </div>
    </div>
</div>
@*style choose view*@
<div id="styleChooseView" class="sub-view d-none align-items-center d-flex justify-content-around w-100 h-100">
    <div class="align-items-center d-flex flex-column col-sm-12 col-md-9 col-lg-8 col-xl-8" style="z-index:101;">
        <div>
            <label style="font-size: 28px;color: #9a9a9a;">Select your preferred shape</label>
        </div>
        <div class="w-100 d-flex justify-content-between align-items-center" style="height: 300px;">
            <div class="style-tab h-100 d-flex align-items-center justify-content-center" data-pathIndex="0" style="position:relative; width:27%;z-index:101;">
                <img src="~/imgs/circle.svg" style="max-width:90%;position:absolute;z-index:101;" />
                <img src="~/imgs/circle_shadow.svg" class="d-none" style="max-width:100%;position:absolute;visibility: visible;opacity: 0.4;z-index: 100;" />
            </div>
            <div class="style-tab h-100 d-flex align-items-center justify-content-center" data-pathIndex="1" style="position:relative; width:35%;z-index:101;">
                <img src="~/imgs/ellipse.svg" style="max-width:90%;position:absolute;z-index:101;" />
                <img src="~/imgs/ellipse-shadow.svg" class="d-none" style="max-width:100%;position:absolute;visibility: visible;opacity: 0.4;z-index: 100;" />
            </div>
            <div class="style-tab h-100 d-flex align-items-center justify-content-center" data-pathIndex="2" style="position:relative; width:27%;z-index:101;">
                <img src="~/imgs/heart.svg" style="max-width:85%;position:absolute;z-index:101;" />
                <img src="~/imgs/heart_shadow.svg" class="d-none" style="max-width:100%;position:absolute;visibility: visible;opacity: 0.4;z-index: 100;" />
            </div>
        </div>
        <div style="z-index:101;">
            <div id="chooseStyle" class="align-items-center btn-next d-flex justify-content-center" style="text-decoration:none;">Next</div>
        </div>
    </div>
</div>
 