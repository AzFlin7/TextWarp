        @*word input view*@
        <div id="wordInputView" class="sub-view d-none align-items-center d-flex justify-content-around w-100 h-100">
            <div class="align-items-center d-flex flex-column col-sm-12 col-md-9 col-lg-8 col-xl-6">
                <div>
