        @*style choose view*@
        <div id="styleChooseView" class="sub-view d-none align-items-center d-flex justify-content-around w-100 h-100">
            <div class="align-items-center d-flex flex-column col-sm-12 col-md-9 col-lg-8 col-xl-6">
                <div>
                    <label style="font-size: 28px;color: #9a9a9a;">Select your prefered shape</label>
                </div>
                <div class="w-100 d-flex justify-content-between align-items-center" style="height: 238px">
                    <div class="style-tab h-100 d-flex align-items-center justify-content-center" data-pathIndex="0" style="position:relative; width:27%;">
                        <img src="icons/circle.svg" style="max-width:85%;position:absolute;" />
                        <img src="icons/circle_shadow.svg" style="display:none;max-width:100%;position:absolute;visibility: visible;opacity: 0.4;" />
                    </div>
                    <div class="style-tab h-100 d-flex align-items-center justify-content-center" data-pathIndex="1" style="position:relative; width:35%;">
                        <img src="icons/ellipse.svg" style="max-width:85%;position:absolute;" />
                        <img src="icons/ellipse-shadow.svg" style="display:none;max-width:100%;position:absolute;visibility: visible;opacity: 0.4;" />
                    </div>
                    <div class="style-tab h-100 d-flex align-items-center justify-content-center" data-pathIndex="2" style="position:relative; width:27%;">
                        <img src="icons/heart.svg" style="max-width:85%;position:absolute;" />
                        <img src="icons/heart_shadow.svg" style="display:none;max-width:100%;position:absolute;visibility: visible;opacity: 0.4;" />
